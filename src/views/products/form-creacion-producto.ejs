<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("./partials/head.ejs" , { cssSheet: "create-edit",cssSheet1:"headerFooter", icons: "https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"} ) %>
    <script src="/js/imgPreview.js"></script>
    <script src="/js/productsValidation.js"></script>
</head>

<body>
    <header>
        <%- include("./partials/header.ejs")%>
    </header>
    <main>
        <%- include("./partials/info-banner.ejs")%>
        <h2 class="sub-title2">Bienvenido a la creación de tu producto:</h2>
        <form id="form-create" class="form" action="/products/create" method="POST" enctype="multipart/form-data">
            <div class="formCreate">
                <div class="inputCreate">
                    <label for="name" class="form-label">Nombre:</label>
                    <input type="text" id="name" name="name" placeholder="Ej: Pasta de maní" class="form-input" value= "<%= locals.old ? old.name : "" %>">
                    <% if (locals.mensajesDeError && mensajesDeError.name) { %>
                        <div><%= mensajesDeError.name.msg %> </div> 
                    <% } %>
                    <div class="errores" id="error-name"></div>
                </div>
                <div class="inputCreate">
                    <label for="brand" class="form-label">Marca:</label>
                    <input type="text" id="brand" name="brand" placeholder="Ej: Nutrasem" class="form-input" class="form-input" value= "<%= locals.old ? old.brand : "" %>">
                    <% if (locals.mensajesDeError && mensajesDeError.brand) { %>
                        <div><%= mensajesDeError.brand.msg %> </div> 
                    <% } %>
                    <div class="errores" id="error-brand"></div>
                </div>
                <div class="inputCreate">
                    <label for="price" class="form-label">Precio:</label>
                    <input type="number" id="price" name="price" placeholder="Ej: 90" class="form-input" class="form-input" value= "<%= locals.old ? old.price : "" %>">
                    <% if (locals.mensajesDeError && mensajesDeError.price) { %>
                        <div><%= mensajesDeError.price.msg %> </div> 
                    <% } %>
                    <div class="errores" id="error-price"></div>

                </div>
                <div class="inputCreate">
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value="">Elegí</option>
                        <% categories.forEach(category => { %>
                             <option value="<%= category.id %>" <%= locals.old && (category.id == old.category) ? "selected" : null %>>  <%= category.name %> </option>
                        <% }); %>  
                    </select>
                    <% if (locals.mensajesDeError && mensajesDeError.category) { %>
                        <div><%= mensajesDeError.category.msg %> </div> 
                    <% } %>
                    <div class="errores" id="error-category"></div>
                </div>
                <div class="inputCreate">
                    <label for="ofertaOdestacado" class="form-label">Estado del producto:</label>
                    <select name="ofertaOdestacado" id="ofertaOdestacado" class="form-input">
                        <option value="">Elegí</option>
                        <% statuses.forEach(status => { %>
                             <option value="<%= status.id %>" <%= locals.old && (status.id == old.ofertaOdestacado) ? "selected" : null %>>  <%= status.name %> </option>
                        <% }); %>  
                    </select>
                    <% if (locals.mensajesDeError && mensajesDeError.ofertaOdestacado) { %>
                        <div><%= mensajesDeError.ofertaOdestacado.msg %> </div> 
                    <% } %>
                    <div class="errores" id="error-ofertaOdestacado"></div>
                </div>
                <div class="inputCreate">
                    <label for="descriptionHome" class="form-label">Descipción para el home:</label>
                    <textarea name="descriptionHome" id="descriptionHome" class="form-input" placeholder="Descripción más corta" maxlenght= 122 class="form-input"><%= locals.old ? old.descriptionHome : "" %></textarea>
                    <% if (locals.mensajesDeError && mensajesDeError.descriptionHome) { %>
                        <div><%= mensajesDeError.descriptionHome.msg %> </div> 
                    <% } %>
                    <div class="errores" id="error-descriptionHome"></div>
                </div>
                <div class="inputCreate">
                    <label for="descriptionProduct" class="form-label">Descipción para el detalle:</label>
                    <textarea name="descriptionProduct" id="descriptionProduct" class="form-input-texto" placeholder="Descripción completa" class="form-input"><%= locals.old ? old.descriptionProduct : "" %></textarea>
                    <% if (locals.mensajesDeError && mensajesDeError.descriptionProduct) { %>
                        <div><%= mensajesDeError.descriptionProduct.msg %> </div> 
                    <% } %>
                    <div class="errores" id="error-descripcion"></div>
                </div>
                <div class="inputCreate">
                    <label for="image" class="form-label">Imagen:</label>
                    <input type="file" name="image" class="form-input" id="image" accept= ".jpg, .png" onchange="preview(event,'#imgPreview')" value= "<%= locals.old ? old.img : "" %>"></input>
                    <% if (locals.mensajesDeError && mensajesDeError.image) { %>
                        <div><%= mensajesDeError.image.msg %> </div> 
                    <% } %>
                    <div class="errores" id="error-image"></div>
                </div>
                <p class="previewText">Previsualización:</p>
                <img id="imgPreview" class="preview" alt="Previsualización">
                <div class="inputCreate">
                    <button type="submit" class="guardarProd">Guardar producto</button>
                </div>
            </div>
        </form>
    </div>
    </main>
    <%- include('partials/footer.ejs') %>
    <script src="/js/banner.js"></script>
</body>

</html>
